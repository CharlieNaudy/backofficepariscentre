<p id="notice"><%= notice %></p>

<p>
  <strong>Nom:</strong>
  <%= @meeting.nom %>
</p>
<p>
  <strong>Adress:</strong>
  <%= @meeting.adress %>
</p>
<p>
  <strong>Latitude:</strong>
  <%= @meeting.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @meeting.longitude %>
</p>


<p>
  <strong>Friends:</strong>
  <% if @meeting.users.empty? %>
  <%= "No friend in the meeting" %>
  <%else%>
  <% @meeting.users.each do |ami| %>
  <% @a = "#{@a}" + ami.first_name + " " + ami.last_name + ", " %>
  <% end %>
  <%= @a.chomp(", ") %>
  <% end %>
</p>

<p>
  <strong>Date:</strong>
  <%= @meeting.date %>
</p>

<img>
  <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@meeting.latitude},#{@meeting.longitude}&markers=#{@meeting.latitude},#{@meeting.longitude}&zoom=13&size=640x400&key=AIzaSyA3ClUuV34fLioaJn9jbt0emQXtjW-ciCQ",
              class: 'img-fluid img-rounded', alt: "#{@meeting.nom} on the map"%>

</img>
<p><%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>
</p>
